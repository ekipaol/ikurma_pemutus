<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/layoutcoordinator"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <include layout="@layout/toolbar_regular" />


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:layout_marginTop="@dimen/toolbar_height_default"
        >
        <Button
            android:id="@+id/bt_tampil_summary"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            style="@style/Widget.AppCompat.Button.Colored"

            android:backgroundTint="@color/main_green_stroke_color"
            android:layout_centerHorizontal="true"
            android:layout_height="40dp"
            android:text="Tampilkan Summary"/>


        <LinearLayout
            android:id="@+id/ll_summary_monitoring"
            android:visibility="gone"
            android:animateLayoutChanges="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shapebordergreen"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_keterangan_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Keterangan Summary"
                android:textAlignment="center"
                android:layout_marginBottom="6dp"/>






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorGreenSoft"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="6dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Pengajuan"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlackHeader"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_weight="1"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tv_total_pengajuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlackHeader"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorGreenSoft"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="6dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lolos Prescreening"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlackHeader"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_weight="1"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tv_lolos_prescreening"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlackHeader"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorGreenSoft"
                android:visibility="visible"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="6dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gagal Prescreening"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlackHeader"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_weight="1"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tv_gagal_prescreening"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlackHeader"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorGreenSoft"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="6dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Telah Didisposisi"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlackHeader"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_weight="1"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tv_telah_didisposisi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlackHeader"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </LinearLayout>



            <Button
                android:id="@+id/bt_sembunyi_summary"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                style="@style/Widget.AppCompat.Button.Colored"
                android:backgroundTint="@color/main_green_stroke_color"
                android:layout_marginTop="12dp"
                android:layout_height="40dp"
                android:text="Sembunyikan Summary"/>



        </LinearLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/refresh"

            android:layout_below="@id/ll_summary_monitoring"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list_monitoring_pencairan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animWhale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:lottie_fileName="empty_whale.json"
                android:layout_centerInParent="true"
                android:visibility="gone"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"/>

            <TextView
                android:id="@+id/tvWhale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_below="@id/animWhale"
                android:visibility="invisible"
                android:layout_centerInParent="true"
                android:text="Belum ada user"
                android:textColor="@android:color/darker_gray"
                />
        </RelativeLayout>

        <!--<com.google.android.material.floatingactionbutton.FloatingActionButton-->
        <!--android:id="@+id/fb_advanced_search"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:visibility="gone"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_marginBottom="30dp"-->
        <!--android:layout_marginRight="30dp"-->
        <!--android:src="@drawable/ic_search_black_24dp"-->
        <!--/>-->

    </RelativeLayout>



    <include layout="@layout/loading" />
    <include layout="@layout/item_daftar_disposisi_shimmer"/>
    <include layout="@layout/monitoring_search_bottom_sheet"/>



</androidx.coordinatorlayout.widget.CoordinatorLayout>
