    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="6dp"
        app:cardElevation="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <LinearLayout
                android:id="@+id/ll_infohotprospek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv_foto"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    app:riv_border_width="2dip"
                    app:riv_border_color="@color/colorPrimary"
                    app:riv_corner_radius="8dip"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:src="@drawable/brochure"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="{Nama}"
                        android:padding="3dp"
                        android:textSize="16dp"/>

                    <TextView
                        android:id="@+id/tv_produk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="{Produk}"
                        android:padding="3dp"
                        android:textSize="13dp"/>

                    <TextView
                        android:id="@+id/tv_plafond"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="{Plafond}"
                        android:padding="3dp"
                        android:textSize="13dp"/>

                    <TextView
                        android:id="@+id/tv_tenor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="{Tenor}"
                        android:padding="3dp"
                        android:textSize="13dp"/>

                    <TextView
                        android:id="@+id/tv_tujuanpenggunaan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="{Tujuan Penggunaan}"
                        android:padding="3dp"
                        android:textSize="13dp"/>

                </LinearLayout>

