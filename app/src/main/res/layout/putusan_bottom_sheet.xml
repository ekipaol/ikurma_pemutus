                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    app:cardCornerRadius="7dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp">

                        <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                            android:id="@+id/text_catatan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            app:hasClearButton="true"
                            app:iconSignifier="@drawable/ic_event_note_black_24dp"

                            app:isResponsiveIconColor="false"
                            app:enabled="true"
                            app:maxCharacters="500"
                            app:labelText="Catatan Pemutus"

                            >
                            <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                                android:id="@+id/extended_catatan"
                                android:layout_width="wrap_content"
                                android:textColor="@color/colorBlackHeader"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:text=""

                                />

                        </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>


