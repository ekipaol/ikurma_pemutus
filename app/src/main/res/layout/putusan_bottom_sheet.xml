                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="275dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="25dp"
                            android:weightSum="10">
                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="120dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="5">
                                <info.hoang8f.widget.FButton
                                    android:id="@+id/bt_tolak"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textSize="25sp"
                                    android:text="Tolak"
                                    android:textColor="@color/colorWhite"
                                    app:buttonColor="@color/red"
                                    >

                                </info.hoang8f.widget.FButton>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="120dp"
                                android:layout_marginRight="5dp"

                                android:layout_weight="5">
                                <info.hoang8f.widget.FButton
                                    android:id="@+id/bt_setuju"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="SETUJU"
                                    android:textSize="25sp"
                                    android:textColor="@color/colorWhite"
                                    app:buttonColor="@color/green"
                                    >

                                </info.hoang8f.widget.FButton>
                            </androidx.cardview.widget.CardView>



                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:weightSum="10"
                            android:layout_alignParentBottom="true">


                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="120dp"

                                android:layout_weight="5"
                                android:visibility="visible">
                                <info.hoang8f.widget.FButton
                                    android:id="@+id/bt_kembalikan"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textSize="15sp"
                                    android:text="Kembalikan ke AO"
                                    android:textColor="@color/colorWhite"
                                    app:buttonColor="@color/fbutton_color_orange"
                                    >

                                </info.hoang8f.widget.FButton>


                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_marginLeft="5dp"
                                android:layout_height="120dp"
                                android:layout_weight="5">
                                <info.hoang8f.widget.FButton
                                    android:id="@+id/bt_tunda"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Tunda"
                                    android:layout_marginRight="5dp"
                                    android:textSize="25sp"
                                    android:textColor="@color/colorWhite"
                                    app:buttonColor="@color/fbutton_color_orange"
                                    >

                                </info.hoang8f.widget.FButton>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <!--<View-->
