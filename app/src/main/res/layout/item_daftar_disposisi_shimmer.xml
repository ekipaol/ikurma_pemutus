        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_disposisi"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="5"

            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#C2C0C0">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">
                    <android.support.v7.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        app:cardCornerRadius="10dp"
                        android:background="#494848"
                        android:layout_marginBottom="6dp"
                        android:layout_above="@id/tv_produk">

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/tv_pemrakarsa"
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        app:cardCornerRadius="10dp"
                        android:background="@color/colorWhite"
                        android:textAlignment="center"
                        android:padding="5dp"
                        android:layout_gravity="right"
                        android:layout_alignParentRight="true"
                        android:elevation="15dp"
                        />


                    <android.support.v7.widget.CardView
                        android:id="@+id/tv_produk"
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                       app:cardCornerRadius="10dp"
                        android:layout_alignParentBottom="true"
                        />

                    <android.support.v7.widget.CardView
                        android:id="@+id/tv_plafon"
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:background="#494848"
                        app:cardCornerRadius="10dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                       />

                    <android.support.v7.widget.CardView
                        android:id="@+id/tv_tenor"
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        app:cardCornerRadius="10dp"
                       android:layout_marginBottom="6dp"
                        android:layout_above="@id/tv_plafon"
                        android:layout_alignParentRight="true"

                        android:layout_alignParentBottom="false"
                      />

                </RelativeLayout>

            </FrameLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

