<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="6dp"
    app:cardElevation="0dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:background="@color/colorBackgroundGrey1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:elevation="15dp"
            android:orientation="vertical">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:orientation="vertical"
                android:gravity="bottom">
                <!--<TextView-->
                    <!--android:id="@+id/tv_nama"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="{Nama Nasabah}"-->
                    <!--android:textSize="18dp"-->
                    <!--android:textStyle="bold"-->
                    <!--android:padding="5dp"-->

                    <!--android:textColor="@android:color/white"/>-->

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/fr_image">

            <ImageView
                android:id="@+id/iv_foto"
                android:src="@drawable/banner_placeholder"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/blacktransparent_image"/>

            //hapus text view ini ketika production
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvKeteranganEform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="E-FORM"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_alignParentBottom="true"

                    />
                <TextView
                    android:id="@+id/tv_produk"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="{Product}"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:background="@drawable/round2"/>

            </RelativeLayout>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_info_pipeline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/fr_image"
            android:padding="6dp"
            >
            <TextView
                android:id="@+id/tv_plafond"
                android:layout_below="@+id/fr_image"
                android:text="{Plafond}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textSize="12sp"
                android:textColor="#595959"/>

            <TextView
                android:id="@+id/tv_tenor"
                android:text="{Tenor}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textSize="12sp"
                android:textColor="#595959"/>

            <TextView
                android:id="@+id/tv_waktu"
                android:text="{Waktu Pengajuan}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="#595959"
                android:textSize="12sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_proses"
            android:layout_below="@+id/fr_image"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="Detail"
            android:textColor="#595959"
            android:textAllCaps="false"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/shapeborder"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>