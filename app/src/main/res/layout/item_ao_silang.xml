<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.wajahatkarim3.easyflipview.EasyFlipView
        android:id="@+id/v_easyflip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flipOnTouch="false"
        app:flipEnabled="true"
        app:flipDuration="400"
        app:flipFrom="right"
        app:flipType="horizontal"
        app:autoFlipBack="false"
        >

        <!-- Back Layout Goes Here -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="20dp"
           >
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_item_ao_silang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#F3F3F3"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">



                <LinearLayout
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                   >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_foto_ao_silang"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_marginLeft="16dp"
                            android:src="@drawable/generic_user2"
                            app:civ_border_color="#FF000000"
                            app:civ_border_width="2dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="14dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <me.grantland.widget.AutofitTextView
                                android:id="@+id/tv_nama_ao_silang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color"
                                android:maxLines="1"
                                android:textSize="20sp"
                                android:fontFamily="@font/muli_b"
                                android:text="Supardi Jaeludin "/>

                            <TextView
                                android:id="@+id/tv_kantor_ao_silang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color"
                                android:fontFamily="@font/muli_b"
                                android:textStyle="bold"
                                android:text="KC Cianjur"/>


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/colorPrimary"
                        android:padding="2dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_m"
                            android:text="Permintaan appraisal dengan"
                            android:textColor="@color/colorWhite"
                            />

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="right"
                        >



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="14dp"
                            android:paddingLeft="72dp"
                            android:gravity="right"
                            android:orientation="vertical">

                            <me.grantland.widget.AutofitTextView
                                android:id="@+id/tv_nama_partner_ao_silang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:maxLines="1"
                                app:sizeToFit="true"
                                android:fontFamily="@font/muli_b"
                                android:text="Muhammad Aleksander Jaelani "/>

                            <TextView
                                android:id="@+id/tv_nama_kantor_partner_ao_silang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_b"
                                android:textStyle="bold"
                                android:text="KCP Cileungsi"/>


                        </LinearLayout>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_foto_partner_ao_silang"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/generic_user2"
                            app:civ_border_color="#FF000000"
                            app:civ_border_width="2dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                    </LinearLayout>





                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Front Layout Goes Here -->
        <include layout="@layout/item_ao_silang_back"/>

    </com.wajahatkarim3.easyflipview.EasyFlipView>





</LinearLayout>