            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/text_uid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hasClearButton="false"
                app:isResponsiveIconColor="false"
                app:enabled="false"
                app:labelText="UID"
                app:iconSignifier="@drawable/ic_public_black_24dp"
                >

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/extended_uid"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorBlackHeader"
                    android:layout_height="wrap_content"

                    />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"/>
            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/text_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hasClearButton="false"
                app:enabled="false"
                app:labelText="Username"
                app:isResponsiveIconColor="false"
                app:iconSignifier="@drawable/ic_group_black_24dp"
                >

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/extended_username"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorBlackHeader"
                    android:layout_height="wrap_content"

                    />


            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
