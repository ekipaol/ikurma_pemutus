                android:layout_height="2dp"
                android:background="#c0c0c0"/>

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/text_kantor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hasClearButton="false"
                app:isResponsiveIconColor="false"
                app:labelText="Kantor"
                app:enabled="false"
                app:iconSignifier="@drawable/ic_domain_black_24dp"
                >

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/extended_kantor"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlackHeader"

                    />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
            <View
                android:id="@+id/view_3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"/>

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/text_status"
                android:layout_width="match_parent"
