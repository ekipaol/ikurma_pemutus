                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"/>


            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/text_sk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isResponsiveIconColor="false"
                app:hasClearButton="false"
                app:labelText="Nomor SK"
                app:enabled="false"
                app:iconSignifier="@drawable/ic_identity_card"
                >

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/extended_sk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlackHeader"

                    />

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
            <View
                android:id="@+id/view_4"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"/>


            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/text_lock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isResponsiveIconColor="false"
                app:hasClearButton="false"
                app:labelText="Lock"
