<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackgroundGrey1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:elevation="15dp"
                    android:orientation="vertical">






                </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:id="@+id/fr_image">
                    <ImageView
                        android:id="@+id/iv_foto"
                        android:src="@drawable/banner_placeholder"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/blacktransparent_image"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="{Nama Nasabah}"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="70dp"
                    android:textColor="@color/colorWhite"/>
                <TextView
                    android:id="@+id/tv_produk"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="{Product}"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/round2"/>
            </RelativeLayout>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/ll_info_pipeline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/fr_image"
                android:padding="6dp">

                <TextView
                    android:id="@+id/tv_id_aplikasi_item_pembiayaan"
                    android:text="{ID Aplikasi}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tv_plafond"
                    android:layout_below="@+id/fr_image"
                    android:text="{Plafond}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textSize="12sp"
                    android:textColor="#595959"/>

                <TextView
                    android:id="@+id/tv_tenor"
                    android:text="{Tenor}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textSize="12sp"
                    android:textColor="#595959"/>

                <TextView
                    android:id="@+id/tv_waktu"
                    android:text="{Waktu Pengajuan}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textSize="12sp"/>


            </LinearLayout>

            <Button
                android:id="@+id/btn_proses"
                android:layout_below="@+id/fr_image"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="Lihat"
                android:textColor="#595959"
                android:textAllCaps="false"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/shapeborder"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>