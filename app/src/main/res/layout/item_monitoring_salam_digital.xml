<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    android:paddingBottom="4dp"
    app:cardElevation="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_nama_nasabah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="{Nama Nasabah}"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorBlackHeader"
            android:background="@drawable/bordertextbox_primary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Pengajuan"
                android:fontFamily="@font/muli_b"
                android:layout_weight="1"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_tanggal_pengajuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="{10 Feb 2020}"
                android:textColor="@color/colorBlackHeader"
                android:fontFamily="@font/muli_b"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:layout_marginRight="12dp"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Produk"
                android:layout_weight="1"
                android:fontFamily="@font/muli_b"
                android:textSize="14sp"/>/>

            <TextView
                android:id="@+id/tv_nama_produk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="{Mikro Faedah}"
                android:textColor="@color/colorBlackHeader"
                android:fontFamily="@font/muli_b"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:layout_marginRight="12dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plafond"
                android:layout_weight="1"
                android:fontFamily="@font/muli_b"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_plafond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="{Rp. 25.000.000}"
                android:textColor="@color/colorBlackHeader"
                android:fontFamily="@font/muli_b"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:layout_marginRight="12dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unit Kerja"
                android:layout_weight="1"
                android:fontFamily="@font/muli_b"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_unit_kerja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="{KC Tangerang}"
                android:textColor="@color/colorBlackHeader"
                android:fontFamily="@font/muli_b"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:layout_marginRight="12dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status Prescreening"
                android:layout_weight="1"
                android:fontFamily="@font/muli_b"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_status_prescreening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="{Lolos}"
                android:textColor="@color/green"
                android:fontFamily="@font/muli_b"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:layout_marginRight="12dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status Disposisi"
                android:layout_weight="1"
                android:fontFamily="@font/muli_b"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_status_disposisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="{Belum Disposisi}"
                android:textColor="@color/red"
                android:fontFamily="@font/muli_b"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:layout_marginRight="12dp"
                android:textSize="14sp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_margin="6dp"
            android:paddingTop="5dp"
            >
            <Button
                android:id="@+id/bt_detil_monitoring_pencairan_kc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_gravity="right"
                android:text="Lihat KCP yang Disupervisi"/>



        </LinearLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>