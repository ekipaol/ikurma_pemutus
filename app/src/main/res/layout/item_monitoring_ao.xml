<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    android:paddingBottom="4dp"
    app:cardElevation="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_nama_ao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="{Nama AO}"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorBlackHeader"
            android:background="@drawable/bordertextbox_primary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jabatan"
                android:fontFamily="@font/muli_b"
                android:layout_weight="1"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_jabatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="{-}"
                android:textColor="@color/colorBlackHeader"
                android:fontFamily="@font/muli_b"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:layout_marginRight="12dp"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pencapaian Pencairan"
                android:fontFamily="@font/muli_b"
                android:layout_weight="1"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_pencairan_ao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="{10%}"
                android:textColor="@color/colorBlackHeader"
                android:fontFamily="@font/muli_b"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:layout_marginRight="12dp"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pencapaian Outstanding"
                android:layout_weight="1"
                android:fontFamily="@font/muli_b"
                android:textSize="14sp"/>/>

            <TextView
                android:id="@+id/tv_outstanding_ao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="{10%}"
                android:textColor="@color/colorBlackHeader"
                android:fontFamily="@font/muli_b"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:layout_marginRight="12dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:visibility="gone"
            android:paddingRight="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pencapaian DPK"
                android:layout_weight="1"
                android:fontFamily="@font/muli_b"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_dpk_ao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="{23%}"
                android:textColor="@color/colorBlackHeader"
                android:fontFamily="@font/muli_b"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:layout_marginRight="12dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Kol 2"
                android:layout_weight="1"
                android:fontFamily="@font/muli_b"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_kol_ao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="{15%}"
                android:textColor="@color/colorBlackHeader"
                android:fontFamily="@font/muli_b"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:layout_marginRight="12dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total NPF"
                android:layout_weight="1"
                android:fontFamily="@font/muli_b"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_npf_ao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="{1%}"
                android:textColor="@color/colorBlackHeader"
                android:fontFamily="@font/muli_b"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:layout_marginRight="12dp"
                android:textSize="14sp"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:visibility="gone"
            android:paddingRight="16dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/dash_line"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layerType="software"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pipeline :"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="12sp"/>

                <TextView
                    android:visibility="visible"
                    android:id="@+id/tv_total_pipeline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="{-}"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlackHeader"
                    android:layout_weight="1"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hotprospek :"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="12sp"/>

                <TextView
                    android:visibility="visible"
                    android:id="@+id/tv_total_hotprospek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="{-}"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlackHeader"
                    android:layout_weight="1"/>



            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:visibility="gone"
            android:paddingRight="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Approved"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="12sp"/>

                <TextView
                    android:visibility="visible"
                    android:id="@+id/tv_total_approved"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="{-}"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlackHeader"
                    android:layout_weight="1"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cair"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="12sp"/>

                <TextView
                    android:visibility="visible"
                    android:id="@+id/tv_total_cair"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="{-}"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlackHeader"
                    android:layout_weight="1"/>



            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="6dp"
            android:paddingTop="5dp"
            >
            <Button
                android:id="@+id/bt_detil_monitoring_sales_ao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                style="@style/Widget.AppCompat.Button.Colored"
                android:backgroundTint="@color/colorSecondary"
               android:layout_weight="1"
                android:text="Lihat Sales"/>

            <Button
                android:id="@+id/bt_detil_monitoring_pencairan_ao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_weight="1"
                android:text="Lihat Nasabah"/>



        </LinearLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>