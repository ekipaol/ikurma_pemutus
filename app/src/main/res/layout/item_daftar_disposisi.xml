<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_pemrakarsa"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="{Nama AO}"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"

            android:textAlignment="center"
            android:padding="5dp"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:elevation="10dp"
            android:background="@drawable/round2"/>
        <android.support.v7.widget.CardView
            android:id="@+id/cv_disposisi"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="5"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/banner_placeholder"
                android:scaleType="centerCrop"

                android:layout_gravity="center_vertical"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bgheaderorangesquare">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">
                    <TextView
                        android:id="@+id/tv_nama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:shadowColor="#000000"
                        android:shadowDx="1.5"
                        android:shadowDy="1.3"
                        android:shadowRadius="1.6"
                        android:textSize="20dp"
                        android:textColor="@color/colorWhite"
                        android:layout_above="@id/tv_produk"
                        android:layout_alignParentBottom="false"
                        android:text="Edi Santoso"/>

                    <TextView
                        android:id="@+id/tv_waktu_assigned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"

                        android:textSize="11sp"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/muli_b"


                        android:layout_alignParentBottom="false"
                        android:text="12-06-17"/>

                    <TextView
                        android:id="@+id/tv_produk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:shadowColor="#000000"
                        android:shadowDx="1.5"
                        android:shadowDy="1.3"
                        android:shadowRadius="1.6"
                        android:textSize="14sp"
                        android:textColor="@color/colorWhite"
                        android:layout_alignParentBottom="true"
                        android:text="Mikro Irreguler KUR Kecil IB"/>

                    <TextView
                        android:id="@+id/tv_plafon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:shadowColor="#000000"
                        android:shadowDx="1.5"
                        android:shadowDy="1.3"
                        android:shadowRadius="1.6"
                        android:textColor="@color/colorWhite"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:text="Plafon: 200.000.000"/>

                    <TextView
                        android:id="@+id/tv_tenor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:shadowColor="#000000"
                        android:shadowDx="1.5"
                        android:shadowDy="1.3"
                        android:shadowRadius="1.6"
                        android:textSize="15dp"
                        android:layout_above="@id/tv_plafon"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colorWhite"
                        android:layout_alignParentBottom="false"
                        android:text="Tenor: 24 Bulan"/>

                </RelativeLayout>

            </FrameLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>



</LinearLayout>