<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundGrey1"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <!--android.support.design.widget.BottomSheetBehavior-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="vertical">
        <View
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_centerInParent="true"
            android:background="@android:color/black" />

        <ImageView
            android:id="@+id/iv_capsule_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_cancel_black_24dp"/>

        <!--<android.support.v7.widget.CardView-->
        <!--android:id="@+id/cv_capsule_close"-->
        <!--android:layout_marginTop="5dp"-->
        <!--app:cardCornerRadius="5dp"-->
        <!--android:layout_width="25dp"-->
        <!--android:layout_height="15dp"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:backgroundTint="@android:color/darker_gray"-->
        <!--android:background="@color/colorBlackHeader"></android.support.v7.widget.CardView>-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorBackgroundGrey1">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Pilih Bentuk Tanah"
    android:fontFamily="@font/muli_b"
    android:textSize="20sp"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="23dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_segitiga_bentuk_tanah"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="12dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Segitiga"
        android:fontFamily="@font/muli_b"
        android:textSize="18sp"
       android:layout_centerVertical="true"
       android:layout_centerHorizontal="true"/>

</RelativeLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_segiempat_bentuk_tanah"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="12dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Segiempat"
                    android:fontFamily="@font/muli_b"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_trapesium_bentuk_tanah"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="12dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trapesium"
                    android:fontFamily="@font/muli_b"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_tidak_beraturan_bentuk_tanah"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="12dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tidak Beraturan"
                    android:fontFamily="@font/muli_b"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>





    </LinearLayout>



</LinearLayout>