<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackgroundGrey1"
    android:orientation="vertical"
    android:padding="10dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title_bottomsheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Foto Nasabah"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingLeft="50dp"
            android:paddingBottom="10dp"
            android:textSize="16sp"
            android:fontFamily="@font/muli_b"
            android:textColor="@color/colorBlackHeader"/>
        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/ic_close_black_24dp"
            android:tint="@color/colorBlackHeader"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_weight="7"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingBottom="20dp"
        android:paddingTop="6dp">

        <LinearLayout
            android:id="@+id/ll_pickphoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/ico_photo"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih foto"
                android:gravity="center"
                android:textSize="12sp"
                android:textStyle="italic"
                android:padding="3dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_takephoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/ico_camera"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ambil Foto"
                android:gravity="center"
                android:textSize="12sp"
                android:textStyle="italic"
                android:padding="3dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>