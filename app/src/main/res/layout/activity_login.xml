<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.application.bris.brisi_pemutus.page_login.view.LoginActivity"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/loading"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAFCFB"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        android:paddingBottom="25dp">

        <ImageView
            android:visibility="visible"
            android:id="@+id/iv_top_logo_login_2"

            android:layout_width="300dp"


            android:layout_height="230dp"


            android:layout_centerInParent="true"
            android:src="@drawable/ikurma_logo_cropped"/>

        <ImageView
            android:visibility="invisible"
            android:id="@+id/iv_top_logo_login"

            android:layout_width="150dp"


            android:layout_height="200dp"
            android:scaleType="centerCrop"

            android:layout_centerInParent="true"
            android:src="@drawable/ic_final_logo_text_v3"/>

        <ImageView
            android:visibility="invisible"
            android:id="@+id/iv_top_logo_wheel"

            android:layout_width="200dp"


            android:elevation="4dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"

            android:layout_centerInParent="true"
            android:src="@drawable/logo_final_wheel"/>

        <ImageView
            android:visibility="invisible"
            android:id="@+id/iv_top_logo_letter"

            android:layout_width="150dp"


            android:elevation="5dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"

            android:layout_centerInParent="true"
            android:src="@drawable/logo_final_letter"/>



    </RelativeLayout>





            <!--<com.airbnb.lottie.LottieAnimationView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
               <!--app:lottie_fileName="balloon.json"-->
                <!--app:lottie_autoPlay="true"-->
                <!--app:lottie_loop="true"-->
                <!--android:layout_centerInParent="false"-->
                <!--android:layout_alignParentTop="true"/>-->





        <EditText

            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shapeemail"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawablePadding="10dp"
            android:hint="Username"
            android:textColor="@color/colorBlackHeader"
            android:textColorHint="@color/hintGrey"
            android:textColorHighlight="@color/colorBlackHeader"


            />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:background="@drawable/shapeemail"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:textColor="@color/colorBlackHeader"
            android:textColorHint="@color/hintGrey"
            android:textColorHighlight="@color/colorBlackHeader"
            android:inputType="textPassword"

            />

        <mehdi.sakout.fancybuttons.FancyButton
            android:layout_marginTop="12dp"
            android:id="@+id/btn_login"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            fancy:fb_borderColor="@color/colorPrimary"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="@color/colorPrimary"
            fancy:fb_focusColor="#FF5722"
            fancy:fb_iconPosition="right"
            fancy:fb_radius="30dp"
            fancy:fb_text="Login"
            fancy:fb_textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"/>








        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_login_new_bottom"/>
        </RelativeLayout>


    </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
