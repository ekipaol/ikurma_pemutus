<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/toolbar_nosearch" />
    <include layout="@layout/loading"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/toolbar_height_default">


                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/progress_bar_pencairan"
                    android:layout_width="170dp"
                    android:layout_height="200dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    app:cpb_background_progressbar_color="#F5CE92"
                    app:cpb_background_progressbar_width="5dp"
                    app:cpb_progress_direction="to_right"
                    app:cpb_progressbar_color="#fd9c00"
                    app:cpb_progressbar_width="12dp"
                    app:cpb_round_border="false"

                    />

                <TextView
                    android:id="@+id/tv_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/muli_b"
                    android:text="0"
                    android:textSize="40dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/tv_percentage"
                    android:text="%"
                    android:textSize="19dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/cairo_light"
                            android:text="Pencairan"
                            android:textColor="#9B9B9B"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/tv_pencairan_saat_ini"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/mm"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="Rp. 0,00"
                            android:textColor="@color/text_color"
                            android:textSize="30sp"
                            android:textStyle="bold"


                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/cairo_light"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="NOA"
                            android:textColor="#9B9B9B"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/tv_noa_pencairan_performance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/mm"
                            android:gravity="center_vertical"
                            android:textAlignment="center"
                            android:maxLines="1"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="0"
                            android:textColor="@color/text_color"
                            android:textSize="30sp"
                            android:textStyle="bold"


                            />


                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="#c0c0c0" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="6dp"
                android:background="#c0c0c0" />

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="100dp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/cairo_light"
                            android:text="Hot Prospek"
                            android:textColor="#9B9B9B"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/tv_hotprospek_performance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/mm"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="@color/text_color"
                            android:textSize="30sp"
                            android:textStyle="bold"


                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/cairo_light"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="Pipeline"
                            android:textColor="#9B9B9B"
                            android:textSize="14sp"
                            android:textStyle="bold" />


                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/tv_pipeline_performance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/mm"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="@color/text_color"
                            android:textSize="30sp"
                            android:textStyle="bold"


                            />


                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="#c0c0c0" />


            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="12dp"
                android:background="#c0c0c0" />

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="100dp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/cairo_light"
                            android:text="Diputus"
                            android:textColor="#9B9B9B"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/tv_diputus_performance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/mm"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="@color/text_color"
                            android:textSize="30sp"
                            android:textStyle="bold"


                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/cairo_light"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="Menunggu Putusan"
                            android:textColor="#9B9B9B"
                            android:textSize="14sp"
                            android:textStyle="bold" />


                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/tv_menunggu_putusan_performance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/mm"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="@color/text_color"
                            android:textSize="30sp"
                            android:textStyle="bold"


                            />


                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="#c0c0c0" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="12dp"
                android:background="#c0c0c0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/cairo_light"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:visibility="gone"
                android:text="Grafik Hot Prospek"
                android:textColor="#9B9B9B"
                android:textSize="16sp"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewHotprospek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="14dp"
                android:visibility="gone"

                android:minHeight="230dp"
                app:cardCornerRadius="10dp"

                app:cardElevation="3dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <com.github.mikephil.charting.charts.HorizontalBarChart
                        android:id="@+id/chart_bar_hotprospek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="230dp">

                    </com.github.mikephil.charting.charts.HorizontalBarChart>


                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>



</LinearLayout>